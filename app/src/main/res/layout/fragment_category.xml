<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#D3D3D3">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/Toolbar_Category_Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/Toolbar_profile"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Ajooba Groceries"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:textSize="19sp"/>

    </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Toolbar_Category_Layout">

        <TextView
            android:id="@+id/Heading_Shp_By_Categry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shop By Category"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:background="#D3D3D3"
            android:gravity="center" />

        <LinearLayout
            android:id="@+id/L1_Category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Heading_Shp_By_Categry"
            android:background="@android:color/white">

            <androidx.cardview.widget.CardView
                android:id="@+id/vegetable_Chs_Btn_Category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/Ic_1_Category"
                        android:layout_width="match_parent"
                        android:layout_height="190dp"
                        android:background="@drawable/vegetable_icon" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_below="@id/Ic_1_Category"
                        android:paddingBottom="5dp"
                        android:background="@android:color/white"
                        android:text="Vegetables"
                        android:textSize="20sp"
                        android:textColor="@android:color/black"/>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/fruits_Chs_Btn_Category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/Ic_2_Category"
                        android:layout_width="match_parent"
                        android:layout_height="190dp"
                        android:background="@drawable/fruits_icon" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_below="@id/Ic_2_Category"
                        android:paddingBottom="5dp"
                        android:background="@android:color/white"
                        android:text="Fruits"
                        android:textSize="20sp"
                        android:textColor="@android:color/black"/>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/L1_Category"
            android:background="@android:color/white">

            <androidx.cardview.widget.CardView
                android:id="@+id/grocery_Chs_Btn_Category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/Ic_3_Category"
                        android:layout_width="match_parent"
                        android:layout_height="190dp"
                        android:background="@drawable/kirana_icon" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_below="@id/Ic_3_Category"
                        android:paddingBottom="8dp"
                        android:background="@android:color/white"
                        android:text="Grocery Products"
                        android:textSize="20sp"
                        android:textColor="@android:color/black"/>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/dairy_Chs_Btn_Category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/Ic_4_Category"
                        android:layout_width="match_parent"
                        android:layout_height="190dp"
                        android:background="@drawable/dairy_products" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_below="@id/Ic_4_Category"
                        android:paddingBottom="8dp"
                        android:background="@android:color/white"
                        android:text="Dairy Products"
                        android:textSize="20sp"
                        android:textColor="@android:color/black"/>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>