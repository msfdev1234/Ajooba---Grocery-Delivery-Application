<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/product_Image_Cart"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignParentStart="true"
        android:src="@drawable/img5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/product_Image_Cart"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/product_Name_TxtVw_Cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fresh Tomatoes"
            android:textSize="18sp"
            android:layout_weight="1"
            android:textColor="@android:color/black"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            android:layout_marginTop="6dp">

            <TextView
                android:id="@+id/product_Quantity_TxtVw_Cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="250"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:padding="1dp"
                android:textColor="@android:color/darker_gray"/>

            <TextView
                android:id="@+id/product_Quantity_Units_TxtVw_Cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/product_Quantity_TxtVw_Cart"
                android:text="g"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:textColor="@android:color/darker_gray"/>




        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/l1_products_Cart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/sample_MRP_Cart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:text="MRP: "
                        android:textColor="@android:color/darker_gray"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/product_Mrp_TxtVw_Cart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/sample_MRP_Cart"
                        android:text="62 "
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:textColor="@android:color/darker_gray"/>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/sample_product_Rate_TxtVw_Cart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rs "
                        android:textSize="16sp"
                        android:textStyle="bold"

                        android:textColor="@android:color/black"/>
                    <TextView
                        android:id="@+id/product_Rate_TxtVw_Cart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/sample_product_Rate_TxtVw_Cart"
                        android:text="20"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:textColor="@android:color/black"/>

                </RelativeLayout>




            </LinearLayout>


            <RelativeLayout
                android:id="@+id/RL_elegant_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:layout_marginTop="6dp">

                <TextView
                    android:id="@+id/minus_Symbol_Cart"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/elegant_backround_red"
                    android:text="â€“"
                    android:textSize="25sp"
                    android:gravity="center"
                    android:textColor="#FF0000"
                    android:clickable="true"/>

                <ProgressBar
                    android:id="@+id/progress_bar_elegant_cart"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:visibility="invisible"
                    android:outlineSpotShadowColor="@color/colorPrimary"
                    android:outlineAmbientShadowColor="@color/colorPrimary"/>

                <TextView
                    android:id="@+id/elegant_Number_Cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/minus_Symbol_Cart"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:text="1"
                    android:textSize="22sp"
                    android:gravity="center"
                    android:textColor="#FF0000"/>
                <TextView
                    android:id="@+id/plus_Symbol_Cart"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/elegant_backround_red"
                    android:layout_toRightOf="@+id/elegant_Number_Cart"
                    android:text="+"
                    android:textSize="25sp"
                    android:gravity="center"
                    android:textColor="#FF0000"
                    android:clickable="true"/>

            </RelativeLayout>



        </LinearLayout>

    </LinearLayout>

</RelativeLayout>