<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/product_Image_Order_Products"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_alignParentStart="true"
        android:src="@drawable/img5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/product_Image_Order_Products"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/product_Name_Order_Products"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fresh Tomatoes"
            android:textSize="18sp"
            android:layout_weight="1"
            android:textColor="@android:color/black"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            android:layout_marginTop="6dp">

            <TextView
                android:id="@+id/product_Quantity_Order_Products"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="250"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:padding="1dp"
                android:textColor="@android:color/darker_gray"/>

            <TextView
                android:id="@+id/product_Quantity_Units_Order_Products"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/product_Quantity_Order_Products"
                android:text="g"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:textColor="@android:color/darker_gray"/>




        </RelativeLayout>


        <LinearLayout
            android:id="@+id/l1_products_Order_Products_Parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/l1_products_Order_Products"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/sample_product_Rate_Order_Products"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rs "
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"/>
                    <TextView
                        android:id="@+id/product_Rate_TxtVw_Order_Products"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/sample_product_Rate_Order_Products"
                        android:text="20"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:textColor="@android:color/black"/>

                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/multiple_TxtVw_Order_Products"
                    android:text="Quantity "
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:paddingRight="10dp"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:id="@+id/multiple_TxtVw_Order_Products"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="2"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:gravity="center"
                    android:paddingRight="10dp"
                    android:textColor="@android:color/black"/>

            </RelativeLayout>


        </LinearLayout>



    </LinearLayout>

    </RelativeLayout>

</RelativeLayout>